<p id="notice"><%= notice %></p>

<div class="container">
  <!-- Page Header -->
  <div class="row">
      <div class="col-lg-12">
          <h1 class="page-header text-center">Wishes
              <small></small>
          </h1>
      </div>
  </div>
  <!-- /.row -->

  <!-- Projects Row -->
  <div class="row">
    <% @wishes.each do |wish| %>
          <div class="col-md-4 portfolio-item">
              <a href="#">
                <%= image_tag wish.img_wish.url, class: 'img-responsive' if wish.img_wish.present? %>
              </a>
              <h3>
                  <a href="#"><%= wish.title%></a>
              </h3>
              <%= link_to 'Show', wish %>
              <%= link_to 'Edit', edit_wish_path(wish) %>
              <%= link_to 'Destroy', wish, method: :delete, data: { confirm: 'Are you sure?' } %>
          </div>
    <% end %>
  </div>
  <!-- /.row -->
</div>

<br>

<%= link_to 'New Wish', new_wish_path, class: "btn btn-primary" %>

<br>
